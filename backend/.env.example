NODE_ENV=production
PORT=5000
MONGO_URI=mongodb://localhost:27017/servSync

# Session security
SESSION_SECRET=your_super_secure_session_secret_here_minimum_32_chars_change_this

# CORS - Update with your domain
FRONTEND_ORIGIN=https://yourdomain.com

# SMS Service (NotifyLK or similar)
NOTIFYLK_USER_ID=your_user_id
NOTIFYLK_API_KEY=your_api_key
NOTIFYLK_SENDER_ID=your_sender_id

# File uploads
UPLOAD_DIR=/var/www/ServSync/backend/uploads

# SMS Worker
SMS_WORKER_ENABLED=true
SMS_WORKER_INTERVAL_MS=5000

# Email (if using Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Optional: JWT secret if you add JWT auth later
JWT_SECRET=your_jwt_secret_here